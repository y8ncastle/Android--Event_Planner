<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#004EA2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:src="@drawable/new_password"/>

    <ImageView
        android:id="@+id/password_notice"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:src="@drawable/new_password2"/>

    <ImageView
        android:id="@+id/password_status"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@drawable/new_password3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/password_num1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/password_num4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/password_num7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_num9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00ff0000"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/password_num0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick1"/>

            <Button
                android:id="@+id/password_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="â‰ª"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:background="#00ff0000"
                android:layout_weight="1"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>