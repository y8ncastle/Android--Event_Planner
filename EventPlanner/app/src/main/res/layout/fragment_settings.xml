<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_plate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.jeongyoonsung.eventplanner.Settings">

    <LinearLayout
        android:id="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_order"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginRight="40dip"
            android:src="@drawable/event_order"/>

        <ImageView
            android:id="@+id/history_order"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/history_order"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting2"
        android:layout_below="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/push_notification"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginRight="40dip"
            android:src="@drawable/push_notification_off"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/password"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/password_off"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting3"
        android:layout_below="@+id/setting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/event_default"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginRight="40dip"
            android:onClick="onClick"
            android:src="@drawable/event_history_default"/>

        <ImageView
            android:id="@+id/history_default"
            android:layout_width="300px"
            android:layout_height="300px"
            android:onClick="onClick"
            android:src="@drawable/history_default"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting4"
        android:layout_below="@+id/setting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_marginBottom="30dip"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/app_history"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginRight="40dip"
            android:src="@drawable/app_history"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/app_version"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/app_version"
            android:onClick="onClick2"/>
    </LinearLayout>
</LinearLayout>